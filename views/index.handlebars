<h1>Eat Da Burger!</h1>

<h3>Which burger would you like to eat?</h3>

<ul>
  {{#each burgers}}
  	<li>
  	   <p>ID: {{this.id}}</p>
       <p>Burger: {{this.burger_name}}</p>
  	</li>
  {{/each}}
</ul>

<form action="/" method="POST">
	<textarea type="text" name="burger_name"></textarea>

	<button type="submit">Submit</button>
</form>
